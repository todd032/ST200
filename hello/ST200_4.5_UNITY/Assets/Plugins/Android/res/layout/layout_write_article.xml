<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ID_RL_WRITEARTICLE"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"  >
    
    <include 
        android:id="@+id/ID_RL_TITLE"
        layout="@layout/layout_header_subpage_with_button"  />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/ID_RL_TITLE"
        android:background="@drawable/game_input_bg"
        android:orientation="vertical" >
	    <ScrollView
	        android:id="@+id/ID_SV_SCROLLVIEW"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:fillViewport="true"
	        android:background="@drawable/game_input"
	        android:layout_marginTop="8.5dp"
	        android:layout_marginRight="6dp"
	        android:layout_marginLeft="6dp"
	        android:layout_weight="1"
	        >
            <RelativeLayout
                android:id="@+id/ID_RL_CONTENT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                >
                <EditText
                    android:id="@+id/ID_ET_CONTENT"
                    style="@style/edit_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ID_IV_THUMBNAIL"
                    android:background="@null"
                    android:gravity="top"
                    android:padding="10dp"
                    android:textSize="15sp" >
                    <requestFocus>
                    </requestFocus>
				</EditText>
                <ImageView
                    android:id="@+id/ID_IV_THUMB_MASK"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:background="@drawable/game_photo"
                    android:contentDescription="@string/story_thumbnail" />
                <ImageView
                    android:id="@+id/ID_IV_THUMBNAIL"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/story_thumbnail" />				
            </RelativeLayout>
	    </ScrollView>
	    <RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<CheckBox
				android:id="@+id/ID_CB_PERMISSION"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp"
				android:button="@drawable/selector_permission" 
				android:checked="true"
				android:layout_alignParentRight="true"
				/>
		</RelativeLayout>    
	</LinearLayout>
</RelativeLayout>